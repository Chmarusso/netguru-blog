.post--full-size
  %h2
    = post.title
    %small
      = post.created_at.strftime("%d/%m/%Y : %H:%M")
  = link_to "edit", edit_post_path(post), class: 'post__button--edit'

  .post__body
    = post.body
  .post__tags-list.tagsinput
    - post.tags_array.each do |tag|
      = content_tag :span, tag, class: 'tag'

.row
  .span10
    %h3
      Comments

%hr
= render "comments/form"
%hr

.row{:id => "commentslist"}
  = render :partial => "comments/comment", :collection => post.comments, :as => :comment
